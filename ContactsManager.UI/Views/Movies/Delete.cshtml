@model ActorResponse
@{
    ViewBag.CurrentUrl = "~/Movies/Delete";
    ViewBag.Title = "Delete Actor";
}


<!-- breadCrumb start -->
<div class="flex">
    <div class="flex-1">
        <div class="text-grey">
            <span>Contacts</span>
            <i class="fa-solid fa-caret-right"></i>
            <span class="text-grey">Actors</span>
            <i class="fa-solid fa-caret-right"></i>
            <span class="text-grey">Delete</span>
        </div>
    </div>

</div>
<!-- breadCrumb ends -->

<div class="form-container">
    <h2>Delete Actor</h2>
    <h3>Are you sure you want to delete this actor?</h3>
    @*
    <div class="w-90"> *@
    <form asp-controller="Movies" asp-action="Delete" method="post">
        @*PersonID*@
        <input type="hidden" asp-for="ActorID" />

        @*PersonName*@
        <div class="form-field flex">
            <div class="w-25">
                <label for="FirstName" class="form-label pt">FirstName</label>
            </div>
            <div class="flex-1">
                <input asp-for="FirstName" class="form-input" disabled="disabled" />
                <span asp-validation-for="FirstName" class="text-red"></span>
            </div>
        </div>



        @*Email*@
        <div class="form-field flex">
            <div class="w-25">
                <label for="FamilyName" class="form-label pt">FamilyName</label>
            </div>
            <div class="flex-1">
                <input asp-for="FamilyName" class="form-input" required="true" disabled="disabled" />
                <span asp-validation-for="FamilyName" class="text-red"></span>
            </div>
        </div>

        @*Submit*@
        <div class="form-field flex">
            <div class="w-25">
            </div>
            <div class="flex-1 flex">
                <button class="button button-red-back" style="margin-right: 10px;">Delete</button>
                <a asp-controller="Movies" asp-action="Index" class="button-link button-blue-back">Back to Actors List</a>
            </div>
            <div asp-validation-summary="All" class="text-red"></div>
            @if (ViewBag.Errors != null)
            {
                <div class="text-red ml">
                    <ul>
                        @foreach (string error in ViewBag.Errors)
                        {
                            <li class="ml">@error</li>
                        }
                    </ul>
                </div>
            }
        </div>
    </form>
    @* </div> *@
</div>
